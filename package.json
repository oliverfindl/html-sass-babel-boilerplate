{
	"name": "html-sass-babel-boilerplate",
	"version": "1.0.4",
	"description": "Simple boilerplate for building web app with babel-cli and node-sass.",
	"main": "",
	"scripts": {
		"build": "npm run build:css && npm run build:js",
		"build:js": "npx babel src/js/main.js --out-file dist/js/main.min.js --no-comments --presets=minify,stage-2,env",
		"watch:js": "npx babel src/js/main.js --out-file dist/js/main.min.js --no-comments --presets=minify,stage-2,env --watch",
		"build:css": "npx node-sass src/scss/main.scss dist/css/main.min.css --output-style=compressed",
		"watch:css": "npx node-sass src/scss/main.scss dist/css/main.min.css --output-style=compressed --watch"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/oliverfindl/html-sass-babel-boilerplate.git"
	},
	"keywords": [
		"html",
		"sass",
		"node-sass",
		"babel",
		"babel-cli",
		"babel-preset-env",
		"babel-preset-minify",
		"boilerplate",
		"html-sass-babel-boilerplate"
	],
	"author": "Oliver Findl",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/oliverfindl/html-sass-babel-boilerplate/issues"
	},
	"homepage": "https://github.com/oliverfindl/html-sass-babel-boilerplate#readme",
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-preset-env": "^1.7.0",
		"babel-preset-minify": "^0.5.0",
		"babel-preset-stage-2": "^6.24.1",
		"node-sass": "^4.9.3"
	}
}
